{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "public": "build",
        "ignore": [
            "firebase.jason",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}